//点击对象的value为0是隐藏，为1时显示
function display_items(obj,display1_id,display2_id){
    if (obj.value == "0"){
        $("#"+display1_id).hide();
        if(display2_id){
            $("#"+display2_id).show();
        }
    } else if(obj.value == "1"){
        $("#"+display1_id).show();
        if(display2_id){
            $("#"+display2_id).hide();
        }
    }
}


