<% # encoding: utf-8 %>
<div id="ajax_index_table_v4">
  <%= render :partial => "/mini_clients/ajax_index/ajax_index_table_v4" %>
</div>

<div id="smart-paginator" style="float:right;" ></div>
<br />




<script type="text/javascript">
    $(document).ready(function(){
        $("#chk_all").click(function(){
            var v = false
            if($(this).attr("checked")){
                v = true
            }
            $("input[name='client_ids[]']").attr("checked",v);
        });

        var mini_clinet_count = '<%= @mini_clients_count %>'
        var every_page_count = '<%= @every_page_count %>'
        $('#smart-paginator').smartpaginator({
            totalrecords: parseInt(mini_clinet_count),
            recordsperpage: parseInt(every_page_count),
            initval:1 ,
            next: '下一页',
            prev: '上一页',
            first: '第一页',
            last: '尾页',
            theme:   'green',
            onchange: onChange
        })

    });

    function onChange(newPageValue) {
        createPrintDIV();
        var url = "/mini_clients/ajax_index_table_v4"+"?page="+newPageValue;
    <% if params[:cate] == "1" %>
        url = "/mini_clients/ajax_index_table_v4"+"?page="+newPageValue+"&cate=1";
    <% end %>
        var search_val = $("#search_client_name_or_client_number_like").val();
        var search_serve_user1_id_eq = $("#search_serve_user1_id_eq").val();
        var search_user_id_eq = $("#search_user_id_eq").val();
        var sort_val = $("input[type=radio]:checked").val();
        $.get(url,{search_val: search_val,sort: sort_val,search_serve_user1_id: search_serve_user1_id_eq,search_user_id:search_user_id_eq},function(data){
            $("#ajax_index_table_v4").html(data);
            $("#sk").remove();
        });
    };
</script>