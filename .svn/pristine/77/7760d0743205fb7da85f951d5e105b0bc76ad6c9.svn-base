<fieldset title="基本信息">
  <legend style="padding-left: 10px; font-weight: bold; line-height: 30px;">基本信息：</legend>
  <table style="text-align: left; width: 810px; margin-left: 20px; line-height: 22px; ">
    <tr>
      <td>
        <b>头像:</b>
        <%= image_tag @user.person_image.url(:thumb) %>
      </td>
      <td>
        <b>身份证扫描件:</b>
        <%= image_tag @user.identity_image.url(:thumb) %>
      </td>
    </tr>
    <tr>
      <td>
        <b>姓名:</b>
        <%= @user.name %>
      </td>
      <td>
        <b>性别:</b>
        <%= @user.sex_text %>
      </td>
      <td>
        <b>年龄:</b>
        <%= @user.age %>
      </td>
    </tr>
    <tr>
      <td>
        <b>手机:</b>
        <%= @user.mobile %>
      </td>
      <td>
        <b>出生日期:</b>
        <%= @user.birth %>
      </td>
      <td>
        <b>民族:</b>
        <%= @user.nation_text %>
      </td>
    </tr>
    <tr>
      <td>
        <b>婚姻状况:</b>
        <%= @user.marriage_status_text %>
      </td>
      <td>
        <b>毕业院校:</b>
        <%= @user.last_college %>
      </td>
      <td>
        <b>学历:</b>
        <%= @user.edu_level_text %>
      </td>
    </tr>
    <tr>
      <td>
        <b>身份证号:</b>
        <%= @user.identity_card %>
      </td>
      <td>
        <b>现住址:</b>
        <%= @user.current_address %>
      </td>
    </tr>
  </table>
</fieldset>

<fieldset title="岗位信息">
  <legend style="padding-left: 10px; font-weight: bold; line-height: 30px;">岗位信息：</legend>
  <table style="text-align: left; width: 810px; margin-left: 20px;line-height: 22px;">
    <tr>
      <td>
        <b>部门:</b>
        <%= @user.department_name %>
      </td>
      <td>
        <b>职位:</b>
        <%= @user.position_name %>
      </td>
      <td>
        <b>角色:</b>
        <%= @user.roles_names %>
      </td>
    </tr>
    <tr>
      <td>
        <b>办公电话:</b>
        <%= @user.tel %>
      </td>
      <td>
        <b>办公QQ:</b>
        <%= @user.qq %>
      </td>
      <td>
        <b>入职日期:</b>
        <%= @user.enter_date %>
      </td>
    </tr>
  </table>
</fieldset>

<fieldset title="家庭信息">
  <legend style="padding-left: 10px; font-weight: bold; line-height: 30px;">家庭信息：</legend>
  <table style="text-align: left; width: 810px; margin-left: 20px;line-height: 22px;">
    <tr>
      <td>
        <b>家庭住址:</b>
        <%= @user.family_address %>
      </td>
    </tr>
    <tr>
      <td>
        <b>父亲:</b>
        <%= @user.father %>
      </td>
      <td>
        <b>父亲生日:</b>
        <%= @user.father_birth %>
      </td>
      <td>
        <b>父亲手机:</b>
        <%= @user.father_mobile %>
      </td>
    </tr>
    <tr>
      <td>
        <b>母亲:</b>
        <%= @user.mother %>
      </td>
      <td>
        <b>母亲生日:</b>
        <%= @user.mother_birth %>
      </td>
      <td>
        <p>
          <b>母亲手机:</b>
          <%= @user.mother_mobile %>
        </p>
      </td>
    </tr>

  </table>

</fieldset>

<fieldset title="物品信息">
  <legend style="padding-left: 10px; font-weight: bold; line-height: 30px;">物品信息：</legend>
              <table>

                <tr>
                  <td>资产编号</td>
                  <td>资产名称</td>
                  <td>品牌</td>
                  <td>领用日期</td>
                  <td>操作</td>
                </tr>

                <% @user.assets.each do |asset| %>

                    <tr>
                      <td><%= asset.number %></td>
                      <td><%= asset.name %></td>
                      <td><%= asset.brand %></td>
                      <td><%= asset.used_date %></td>
                      <td><%= link_to "上交" %></td>
                    </tr>

                <% end %>
              </table>


</fieldset>

<fieldset title="其他信息">
  <legend style="padding-left: 10px; font-weight: bold; line-height: 30px;">其他信息：</legend>
  <%= simple_format @user.comment %>
</fieldset>
