<% #encoding: utf-8 %>
<div class="">
  <%= form_tag do %>
      <fieldset>
        <legend>修改密码</legend>

        <div>
          <label for="login">原密码:</label>
          <%= password_field_tag :old_password %>
        </div>

        <div>
          <label for="password">新密码:</label>
          <%= password_field_tag :password %>
        </div>

        <div>
          <label for="password_confirmation">确认密码:</label>
          <%= password_field_tag :password_confirmation %>
        </div>

        <div>
          <%= submit_tag "提交" %>
        </div>
      </fieldset>
  <% end %>
</div>
